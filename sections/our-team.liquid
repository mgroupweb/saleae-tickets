{{ 'section-our-team.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 992px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="our-team section-{{ section.id }}-padding">
  <h2 class="our-team__title">
    {{ section.settings.title }}
  </h2>
  <ul class="our-team__grid">
    {% for block in section.blocks %}
      {% liquid
        assign image = block.settings.image
        assign title = block.settings.title
        assign description = block.settings.description
      %}
  
      <li class="our-team__grid--card">
          {% if image != blank %}
            {% render 'image-banner', image: image %}
          {% endif %}
          {% if title != blank %}
            <h3>{{ title }}</h3>
          {% endif %}
          {% if description != blank %}
            <p>{{ description }}</p>
          {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
  {
  "name": "t:sections.our_team.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
    },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.our_team.title",
      "default": "Our team"
    }
  ],
  "blocks": [
    {
    "type": "heading",
    "name": "t:sections.our_team.blocks.name",
    "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.our_team.title",
          "default": "Name"
        },
        {
          "type": "text",
          "id": "description",
          "default": "<p>Position</p>",
          "label": "t:sections.our_team.description"
        }
      ]
    }
  ],
    "presets": [
      {
        "name": "t:sections.our_team.name"
      }
    ]
  }
{% endschema %}