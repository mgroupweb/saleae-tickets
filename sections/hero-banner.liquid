  "name": "t:sections.hero-banner.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "t:sections.hero-banner.settings.media_settings.content"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "t:sections.hero-banner.settings.image_desktop.label"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "t:sections.hero-banner.settings.image_mobile.label"
    },
    {
      "type": "video",
      "id": "video_desktop",
      "label": "t:sections.hero-banner.settings.video_desktop.label"
    },
    {
      "type": "video",
      "id": "video_mobile",
      "label": "t:sections.hero-banner.settings.video_mobile.label"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "medium",
          "label": "t:sections.hero-banner.settings.image_height.options__1.label"
        },
        {
          "value": "large",
          "label": "t:sections.hero-banner.settings.image_height.options__2.label"
        },
        {
          "value": "extra-large",
          "label": "t:sections.hero-banner.settings.image_height.options__3.label"
        }
      ],
      "default": "large",
      "label": "t:sections.hero-banner.settings.image_height.label"
    },
    {
      "type": "header",
      "content": "t:sections.hero-banner.settings.text_settings.content"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "t:sections.hero-banner.settings.title.label"
    },
    {
      "type": "select",
      "id": "alignment_content_horizontal",
      "options": [
        {
          "value": "left",
          "label": "t:sections.hero-banner.settings.alignment_content_horizontal.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.hero-banner.settings.alignment_content_horizontal.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.hero-banner.settings.alignment_content_horizontal.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.hero-banner.settings.alignment_content_horizontal.label"
    },
    {
      "type": "select",
      "id": "alignment_content_vertical",
      "options": [
        {
          "value": "top",
          "label": "t:sections.hero-banner.settings.alignment_content_vertical.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.hero-banner.settings.alignment_content_vertical.options__2.label"
        },
        {
          "value": "bottom",
          "label": "t:sections.hero-banner.settings.alignment_content_vertical.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.hero-banner.settings.alignment_content_vertical.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.hero-banner.name"
    }
  ]
}
{% endschema %}
