{{ 'section-hero-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .hero-content-{{ section.id }} {
    height: {{  section.settings.image_height }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="hero-content hero-content-{{ section.id }}">
      <img class="image-banner" src="{{ section.settings.image_banner | image_url: width: 1170 }}" alt="">

      <h1 class="title-banner">{{ section.settings.title }}</h1>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.hero-banner.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_banner",
      "label": "t:sections.hero-banner.settings.image_banner.label"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "100",
          "label": "t:sections.hero-banner.settings.image_height.options__1.label"
        },
        {
          "value": "500",
          "label": "t:sections.hero-banner.settings.image_height.options__2.label"
        },
        {
          "value": "800",
          "label": "t:sections.hero-banner.settings.image_height.options__3.label"
        }
      ],
      "label": "t:sections.hero-banner.settings.image_height.label"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.hero-banner.settings.title.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.hero-banner.name"
    }
  ]
}
{% endschema %}
