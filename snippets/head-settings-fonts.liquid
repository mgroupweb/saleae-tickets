{% comment %}
Passes global shopify settings to CSS custom properties and
Theme global object.

Usage:
{%- render 'head-settings-fonts' -%}
{% endcomment %}
{%- style -%}
{% comment %} Fonts {% endcomment %}

  @font-face {
    font-family: 'Gentona';
    font-weight: 300;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'Gentona-Thin.woff2' | asset_url }}") format('woff2'), url("{{ 'Gentona-Thin.woff' | asset_url }}")
    format('woff');
  }

  @font-face {
    font-family: 'Gentona';
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'Gentona-Light.woff2' | asset_url }}") format('woff2'), url("{{ 'Gentona-Light.woff' | asset_url }}")
    format('woff');
  }

  @font-face {
    font-family: 'Gentona';
    font-weight: 500;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'Gentona-Medium.woff2' | asset_url }}") format('woff2'), url("{{ 'Gentona-Medium.woff' | asset_url }}")
    format('woff');
  }

  @font-face {
    font-family: 'Gentona';
    font-weight: 600;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'Gentona-SemiBold.woff2' | asset_url }}") format('woff2'), url("{{ 'Gentona-SemiBold.woff' | asset_url }}")
    format('woff');
  }

  @font-face {
    font-family: 'Gentona';
    font-weight: 700;
    font-style: normal;
    font-display: swap;
    src: url("{{ 'Gentona-Bold.woff2' | asset_url }}") format('woff2'), url("{{ 'Gentona-Bold.woff' | asset_url }}")
    format('woff');
  }

  {% comment %} Theme custom properties {% endcomment %}
  :root {

  /* Font Family */

  --gentona-font: 'Gentona';


  /* Colors */

  --custom-color-headings: #1c1c25;
  --custom-color-p: #1c1c24;


  }
{%- endstyle -%}